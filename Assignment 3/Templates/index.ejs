<!DOCTYPE html>
<html lang="en">

<%-include("./partials/head.ejs") %>
<body>
    <!-- Navigation -->
<%-include("./partials/nav.ejs") %>


<!-- Page Content -->
<main>
<h1>WELCOME TO MY BLOG</h1>

<% if(blogs.length > 0){%>
<div class="allPost">
     <% blogs.forEach(blog => {%>
        <div class="eachPost">
        
 <a href="<%=blog.id%>">

<h2 class="blogTitle"><%= blog.title %></h2> 
<img src="/pictures/<%= blog.Image %>" alt="Upload">
<p class="description"><%= blog.body %></p>
        <div class="others"> 
            <% const creationDate = new Date(blog.updatedAt) %> 
            <h4>Post Made On: <span><%= creationDate.toLocaleDateString()%></span></h4>
            <h4>Post Made At: <span><%= creationDate.toLocaleTimeString()%></span></h4>              
        </div>

    </a>
    </div>
    <%})%>;



   <%} else {%>
    <h3> Oop!!! There is no blog availble</h3>
    <h4>Click here to: <a href="/create" id="add">Add Post</a></h4>
   <%}%>

</div>



</main>
    
</body>
</html>